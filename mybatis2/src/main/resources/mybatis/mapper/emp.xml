<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.hta.emp">
  <!-- parameterType="java.util.Map" 인 경우 #{start}에서 start는 map의 key에 해당합니다. -->
  <select id="termlist" parameterType="java.util.Map" resultType="emp">
    SELECT *
    FROM emp
    WHERE hiredate between #{start} AND #{end}
  </select>

  <!--
    parameterType="map"에서 map은 java.util.Map의 별칭입니다.
    <where> 요소는 조건에 따라 where 절을 추가합니다.
   -->
  <select id="termlist2" parameterType="map" resultType="emp">
    SELECT *
    FROM emp
    <where>
      <if test='start != "" and end != ""'>
        hiredate BETWEEN #{start} AND #{end}
      </if>
    </where>
  </select>

  <select id="termlist3" parameterType="map" resultType="emp">
    SELECT *
    FROM emp
    <where>
      <if test='start != "" and end != ""'>
        hiredate BETWEEN #{start} AND #{end}
      </if>
      <if test='deptno != ""'>
        AND deptno = #{deptno}
      </if>
    </where>
  </select>

  <!--
    1. parameterType="map"
    2. forearch : 전달한 파라미터에 따라 매핑 구문을 반복적으로 추가할 수 있으며 주로 in 절을 지정할 때 사용합니다.
    3. collection : 컬렉션 타입의 파라미터 객체를 지정할 때 사용합니다.
                    배열인 경우는 array, List인 경우에는 list, map인 경우는 키값을 작성합니다.
    4. item : 속성값에 프로퍼티명을 지정하면 해당 프로퍼티명으로 컬렉션 타입의 파라미터 객체에 하나씩 접근합니다.
    5. separator="," : foreach문에서 반복해서 추가되는 문자나 문자열을 의미합니다.
    6. open="(" : foreach문에서 맨 앞에 추가되는 문자나 문자열을 지정할 때 사용합니다.
    7. close=")" : foreach문에서 맨 뒤에 추가되는 문자나 문자열을 지정할 때 사용합니다.
  -->

  <select id="deptnocheck" parameterType="map" resultType="emp">
    SELECT *
    FROM emp
    <if test="deptnos != null">
      WHERE deptno in
      <foreach collection="deptnos" item="data"
               open = "("
               separator = ","
               close=")">
        #{data}
      </foreach>
    </if>
    ORDER BY deptno
  </select>
</mapper>